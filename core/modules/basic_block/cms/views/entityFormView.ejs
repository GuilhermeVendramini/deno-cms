<%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/header.ejs`, { title: page.entity.name, currentUser: currentUser }) %>
<div class="container">
  <h1 class="text-center mb-3"><%= page.entity.name %></h1>
  <% if (page.message) { %>
    <div class="alert alert-danger">
      <%= page.message %>
    </div>
  <% } %>
  <form id="entity-form" action='/admin/<%= page.entity.bundle %>/<%= page.entity.type %>/add' method=post>
    <input id="id" name="id" type="hidden" value='<%= page?.block?._id?.$oid %>'>
    <div class="form-group">
      <label>Title</label>
      <input type="text" required value="<%= page?.block?.title %>" name="title" class="form-control">
    </div>
    <div class="form-group">
      <label>Body</label>
      <textarea id="body" name="body" rows="10" cols="33" class="form-control">
        <%= page?.block?.data?.body %>
      </textarea>
    </div>
    <div class="form-check mb-3">
      <% let checked = page?.block?.published ? "checked" : "" %>
      <input <%= checked %> type="checkbox" name="published" value="true" class="form-check-input" id="published">
      <label class="form-check-label" for="published">Published</label>
    </div>
    <div class="d-flex justify-block-between">
      <div class="mr-2">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
      <% if (page?.block?._id) { %>
        <div class="mr-2">
          <a href='/admin/<%= page.entity.bundle %>/<%= page.block.type %>/delete/<%= page.block._id.$oid %>' class="btn btn-danger">Delete</a>
        </div>
      <% } %>
    </div>
  </form>
</div>
<%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/footer.ejs`) %>
<link href="/libraries/ckeditor/ckeditor.css" type="text/css" rel="stylesheet">
<script src="/libraries/ckeditor/ckeditor.js" type="text/javascript"></script>
<script>
	ClassicEditor
		.create( document.querySelector('#body'), {
      toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
		} )
		.then( editor => {
			window.editor = editor;
		} )
		.catch( err => {
			console.error( err.stack );
		} );
</script>