<%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/header.ejs`, { title: page.entity.name, currentUser: currentUser }) %>
<div class="container">
  <h1 class="text-center mb-3"><%= page.entity.name %></h1>
  <fieldset class="border p-2">
    <legend  class="w-auto">Manager</legend>
    <div class="d-flex mb-3">
      <div class="mr-2">
        <a href='/admin/<%= page.entity.bundle %>/<%= page.entity.type %>/add' class="btn btn-outline-secondary">Add new</a>
      </div>
    </div>
  </fieldset>
  <fieldset class="border p-2">
    <legend  class="w-auto">Filter</legend>
    <div class="d-flex mb-3">
      <form action="/admin/<%= page.entity.bundle %>/<%= page.entity.type %>" method="get">
        <div class="form-group">
          <input class="form-control form-control-sm" name="title" value="<%= page.filters.title %>" type="text" placeholder="Title">
        </div>
        <div class="row">
          <div class="col form-group">
            <label for="published">Published</label>
            <select class="form-control form-control-sm" id="published" name="published">
              <option value="any">Any</option>
              <option value="true" <%- page.filters.published === true ? "selected" : '' %>>Yes</option>
              <option value="false" <%- page.filters.published === false ? "selected" : '' %>>No</option>
            </select>
          </div>
          <div class="col form-group d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
        <input type="hidden" id="pageNumber" name="pageNumber" value="0">
      </form>
    </div>
  </fieldset>
  <div class="mt-3">
    <% if (page?.term) { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Created</th>
          <th scope="col">Updated</th>
          <th scope="col">Published</th>
          <th scope="col">Operations</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < page?.term.length; i++) { %>
        <tr>
          <th scope="row"><%= page.term[i]._id.$oid %></th>
          <td><a href='<%= page.term[i].path %>'><%= page.term[i].title %></a></td>
          <td><%= page.term[i].author.name %></td>
          <td><%= page.term[i].created %></td>
          <td><%= page.term[i].updated %></td>
          <td><%= page.term[i].published %></td>
          <td>
            <% if (currentUser._id.$oid == page.term[i].author._id.$oid || currentUser.roles.includes(0)) { %>
              <a href='/admin/<%= page.entity.bundle %>/<%= page.term[i].type %>/edit/<%= page.term[i]._id.$oid %>'>edit</a> | <a href='/admin/<%= page.entity.bundle %>/<%= page.term[i].type %>/delete/<%= page.term[i]._id.$oid %>'>delete</a>
            <% } %>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center">
        <% if (page.pager.previous !== false ) { %>
          <li class="page-item">
            <a class="page-link" href="?title=<%= page.filters.title %>&published=<%= page.filters.published %>&pageNumber=<%= page.pager.previous %>" aria-label="Previous">&laquo;</a>
          </li>
        <% } %>
        <% if (page.pager.next || page.pager.previous !== false)  { %>
          <li class="page-item"><span class="page-link"><%- page.pager.current %></span></li>
        <% } %>
        <% if (page.pager.next) { %>
          <li class="page-item">
            <a class="page-link" href="?title=<%= page.filters.title %>&published=<%= page.filters.published %>&pageNumber=<%= page.pager.next %>" aria-label="Next">&raquo;</a>
          </li>
        <% } %>
      </ul>
    </nav>
    <% } %>
  </div>
</div>
<%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/footer.ejs`) %>