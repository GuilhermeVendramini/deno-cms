<%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/header.ejs`, { title: entity.name, currentUser: currentUser }) %>
<div class="container">
  <h1 class="text-center mb-3"><%= entity.name %></h1>
  <fieldset class="border p-2">
    <legend  class="w-auto">Manager</legend>
    <div class="d-flex mb-3">
      <div class="mr-2">
        <a href='/admin/<%= entity.bundle %>/<%= entity.type %>/add' class="btn btn-outline-secondary">Add new</a>
      </div>
    </div>
  </fieldset>
  <div class="mt-3">
    <% if (media) { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Created</th>
          <th scope="col">Updated</th>
          <th scope="col">Published</th>
          <th scope="col">Operations</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < media.length; i++) { %>
        <tr>
          <th scope="row"><%= media[i]._id.$oid %></th>
          <td><a href='<%= media[i].path %>'><%= media[i].data.title %></a></td>
          <td><%= media[i].author.name %></td>
          <td><%= media[i].created %></td>
          <td><%= media[i].updated %></td>
          <td><%= media[i].published %></td>
          <td>
            <% if (currentUser._id.$oid == media[i].author._id.$oid || currentUser.roles.includes(0)) { %>
              <a href='/admin/<%= entity.bundle %>/<%= media[i].type %>/edit/<%= media[i]._id.$oid %>'>edit</a> | <a href='/admin/<%= entity.bundle %>/<%= media[i].type %>/delete/<%= media[i]._id.$oid %>'>delete</a>
            <% } %>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <% } %>
  </div>
</div>
<%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/footer.ejs`) %>