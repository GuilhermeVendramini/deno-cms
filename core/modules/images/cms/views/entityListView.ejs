<%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/header.ejs`, { title: entity.name }) %>
<% if (currentUser) { %>
  <%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/menus/adminMenu.ejs`, { currentUser: currentUser}) %>
<% } %>
<div class="container h-100 pt-4">
  <h1 class="text-center mb-3"><%= entity.name %></h1>
  <fieldset class="border p-2">
    <legend  class="w-auto">Manager</legend>
    <div class="d-flex mb-3">
      <div class="mr-2">
        <a href='/admin/media/<%= entity.type.replace("_", "-") %>/add' class="btn btn-outline-secondary">Add new</a>
      </div>
    </div>
  </fieldset>
  <div class="mt-3">
    <% if (term) { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Created</th>
          <th scope="col">Updated</th>
          <th scope="col">Published</th>
          <th scope="col">Operations</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i < term.length; i++) { %>
        <tr>
          <th scope="row"><%= term[i]._id.$oid %></th>
          <td><a href='/media/<%= term[i].type.replace("_", "-") %>/<%= term[i]._id.$oid %>'><%= term[i].data.title %></a></td>
          <td><%= term[i].author.name %></td>
          <td><%= term[i].created %></td>
          <td><%= term[i].updated %></td>
          <td><%= term[i].published %></td>
          <td>
            <% if (currentUser._id.$oid == term[i].author._id.$oid || currentUser.roles.includes(0)) { %>
              <a href='/admin/media/<%= term[i].type.replace("_", "-") %>/edit/<%= term[i]._id.$oid %>'>edit</a> | <a href='/admin/media/<%= term[i].type.replace("_", "-") %>/delete/<%= term[i]._id.$oid %>'>delete</a>
            <% } %>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <% } %>
  </div>
</div>
<%- await include(`${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/footer.ejs`) %>