<%- await include(
  `${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/header.ejs`, 
  {
    title: 'Home',
    currentUser: currentUser, 
    main_menu: page.main_menu, 
    currentUrl: page.currentUrl 
  });
%>
<div class="container">
  <div class="text-center display-4 mb-3">
    <img src="/core/themes/boostrap/assets/images/t-rex.png">
  </div>
  <h1 class="text-center mb-4"><strong>Deno CMS</strong></h1>
  <h2 class="mt-4 mb-4 text-center">
    A <strong>TypeScript</strong> CMS build with <strong>Deno</strong> and <strong>OAK</strong> framework.
  </h2>
  <% if (!currentUser) { %>
    <div class="d-flex justify-content-center">
      <div class="mr-2">
        <a href="/login" class="btn btn-lg btn-dark">Login</a>
      </div>
      <div class="mr-2">
        <a href="/register" class="btn btn-lg btn-outline-secondary">Register</a>
      </div>
    </div>
  <% } %>
  </div>
<%- await include(
  `${Deno.cwd()}${Deno.env.get('THEME')}templates/layout/footer.ejs`, 
  {
    footer_menu: page.footer, 
    currentUrl: page.currentUrl 
  }); 
%>
