<div id="<%= id %>" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% for(var i=0; i < items.length; i++) { %>
      <li data-target="#<%= id %>" class="<%- i == 0 ? 'active' : ''%>" data-slide-to="<%= i %>"></li>
    <% } %>
  </ol>
  <div class="carousel-inner">
    <% for(var i=0; i < items.length; i++) { %>
      <%
        let file = items[i].entity.data.file;
        if (items[i]?.entity?.data?.cropper) {
          let cropper = JSON.parse(items[i].entity.data.cropper);
          file = cropper['16/9']?.cropped?.crop?.url;
        }
      %>
      <div class="carousel-item <%- i == 0 ? 'active' : '' %>">
        <img id="img-carousel-<%= i %>" src="/<%= file %>" class="d-block w-100" alt="<%= items[i].entity.data?.alt %>">
      </div>
    <% } %>
  </div>
  <a class="carousel-control-prev" href="#<%= id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#<%= id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>